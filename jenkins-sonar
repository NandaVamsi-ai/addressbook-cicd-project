pipeline {
    agent any
    tools {
        maven 'Maven3'
    }
    environment {
        SONAR_TOKEN = credentials('nanda')
    }
    stages {
        stage("Checkout Code") {
            steps {
                git 'https://github.com/NandaVamsi-ai/addressbook-cicd-project.git'
            }
        }
        stage("Build & Package") {
            steps {
                sh 'mvn -B clean package'
            }
        }
        stage("SonarQube Analysis") {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh "mvn -B sonar:sonar -Dsonar.host.url=http://localhost:9000 -Dsonar.login=${nanda}"
                }
            }
        }
        stage("Quality Gate") {
            steps {
                timeout(time: 10, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
        stage("Deploy to Tomcat") {
            steps {
                sh "sudo cp ${WORKSPACE}/target/addressbook.war /home/ubuntu/apache-tomcat-9.0.108/webapps/"
            }
        }
    }
}
